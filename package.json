{
  "name": "mern-auth",
  "version": "1.0.0",
  "description": "MongoDB, ExpressJS, ReactJs, and NodeJS starter template",
  "main": "backend/server.js",
  "type": "module",
  "repository": "https://github.com/MAbdurahman/mern-auth.git",
